<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- StartActivityTheme  theme.  Fullscreen  -->
    <style name="StartActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- BaseActivityTheme  theme.  NoactionBar  -->
    <style name="BaseActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="zhuanti_a_list_marginLieft">
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="zhaunti_a_list_marginTop">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="zhuanti_list_item_view_blow_">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignTop">@+id/fnCommentNum</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="zhuanti_list_blow_view_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignTop">@+id/fnCommentNum</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="zhuanti_xuanzhe_filter_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="view_for_specialcolume">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <style name="view_for_specialcolume2">
        <item name="android:background">@android:color/black</item>
        <item name="android:layout_width">@dimen/activity_line</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="view_for_text_specialcolum">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="view_for_text_specialcolum2">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wallpaper_image">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_height">220dp</item>
    </style>

    <style name="shop_frist_iten_linearlayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="shop_frist_item_image">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <!--<item name="android:layout_below">@+id/fnPic</item>-->
    <style name="shop_frist_item_text">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="shop_theme_banner_left_rela">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/shop_theme_banner_image_m_left</item>
        <item name="android:layout_marginRight">@dimen/shop_theme_banner_image_m_middle</item>
        <item name="android:layout_height">@dimen/shop_theme_banner_image_h</item>
    </style>

    <style name="shop_theme_recommend_image">
        <item name="android:layout_width">@dimen/shop_recommend_banner_image_h</item>
        <item name="android:layout_marginLeft">@dimen/shop_theme_banner_image_m_left</item>
        <item name="android:layout_height">@dimen/shop_recommend_banner_image_h</item>
    </style>

    <style name="shop_theme_banner_right_rela">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/shop_theme_banner_image_m_middle</item>
        <item name="android:layout_marginRight">@dimen/shop_theme_banner_image_m_left</item>
        <item name="android:layout_height">@dimen/shop_theme_banner_image_h</item>
    </style>

    <style name="shop_theme_banner_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!--<item name="android:background">@drawable/abc_list_selector_disabled_holo_light</item>-->
    <style name="shop_theme_banner_text1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/wt</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="shop_theme_banner_text2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textColor">@color/wt</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="xiaoheitiao">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/shop_button_black</item>
    </style>

</resources>
