<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:id="@+id/botton_li"
    android:background="@drawable/home_select_tab_bg"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/money"
        android:text="$75"
        android:padding="4dp"
        android:drawablePadding="2dp"
        android:drawableLeft="@drawable/shop_car_jin"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:textSize="15dp"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/add_shop_car"
        android:text="加入购物车"
        android:textColor="@color/wt"
        android:gravity="center"
        android:background="@color/shop_button_gar"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/pay"
        android:text="购买"
        android:textColor="@color/wt"
        android:gravity="center"
        android:background="@color/shop_button_black"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent" />


</LinearLayout>